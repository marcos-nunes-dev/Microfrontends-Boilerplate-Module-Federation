  "compilerOptions": {
    "noEmit": true,
    "target": "es5",
    "lib": ["es5", "dom"],
    // be explicit about types included
    // to avoid clashing with Jest types
    "types": ["cypress"]
  },
  "include": [
    "./**/*.js",
    "./**/*.ts",
    "./**/*.tsx",
    "cypress/plugins/index.js"
  ]
}